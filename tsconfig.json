{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@versatus/versatus-javascript/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/example-program.ts"]
}
